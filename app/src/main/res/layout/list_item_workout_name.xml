<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginStart="@dimen/standard_mobile_side_margin"
        android:layout_marginEnd="@dimen/standard_mobile_side_margin"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/workout_list_item_height">
        <TextView
            android:id="@+id/tv_workout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_gravity="bottom"
        android:background="@color/colorPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/separator_height"/>

</LinearLayout>