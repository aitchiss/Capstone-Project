<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <!--   WorkoutDetailActivity   -->
    <style name="add_exercise_btn_style">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:elevation">6dp</item>
    </style>

    <!--   CustomiseExerciseActivity   -->
    <style name="dialog_theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--   PlayWorkoutActivity   -->
    <style name="set_detail_text_view_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="edit_text_set_detail_style">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:textAlignment">center</item>

    </style>


</resources>
